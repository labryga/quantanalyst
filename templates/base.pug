				//-  			li: a(href="{{ mnuitem.menu_title }}") {{ mnuitem.menu_title }}

				div(id="inhalt", class="content")
					{% block content %}
					for blogitem in object_list
						li: a(href="modellsimulation/{{ blogitem.slug }}") {{ blogitem.titel | striptags }}
					{% endblock content %}

		footer
			div(class="grid_row")
				footer_entries = ['GitHub', 'About', 'Copyright', 'Links']
				each footer_entry in footer_entries
					div(class="footer_entry")
						a(href="https://github.com/labryga", target="_blank")= footer_entry

		script(src="{% static 'js/production/quantanalyst.js' %}")


