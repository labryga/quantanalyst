	body
		{% include "header.pug" %}
		
		main
			div(class="grid_row")	

				//-  navigation desktop/tablet => 600px
				div(id="navigation_desktop_tablet") 
					{% block navigaton_desktop_tablet %}
					ul
						for mnuitem in menu_list
							li: a(href="{{ mnuitem.menu_title | lower }}") {{ mnuitem.menu_title }}
					{% endblock navigaton_desktop_tablet %}
							
				//-  navigation phone <= 599px
				//-  div(id="navigation-phone")
